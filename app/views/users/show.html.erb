<!-- Link your Khan Academy Account -->
  <div class="container">

    <div class="row">
      <div class="col-xs-12 tile-container">
        <div class="thumbnail">
          <%= link_to image_tag("sarah.jpg", :class => "img-circle") %>
          <div class="caption">
            <li><%= @current_user.first_name.capitalize + " " + @current_user.last_name.capitalize %></li>
            <li><%= @current_user.email %></li>
            <li>Preferred Language: <%= @current_user.preferred_language %></li>
          </div>
        </div>
      </div>
    </div>

<!-- CURRENT COURSES -->
<% if @current_user.meetups %>
  <div class="row">
    <div class="col-xs-12 tile-container">
      <div class="thumbnail">
        <h3><%= link_to "Add a Course", new_course_path, class: "btn btn-success" %></h3>
        <h3>Current Meetups</h3>
        <% @current_user.meetups.each do |meetup| %>
        <li><%= link_to meetup.course.title, meetup_path(meetup) %></li>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- MEETUPS NEARBY -->

<div class="row">
  <div class="col-xs-12 tile-container">
    <div class="thumbnail">
      <h3><%= link_to "Create a Meetup", new_meetup_path, class: "btn btn-success" %></h3>
      <h3>Meetups Nearby</h3>
      <ul class="meetups_nearby">
        <div class="visible_meetups_nearby">
          <% @courses[0...4].each do |course| %>
            <li><%= link_to course[0], meetup_path(course[1]) %></li>
          <% end %>
        </div>
        <div class="hidden_meetups_nearby">
          <% @courses[5...@courses.length].each do |course| %>
            <li><%= link_to course[0], meetup_path(course[1]) %></li>
          <% end %>
        </div>
      </ul>
    </div>
    <div class="meetups_nearby_container">
      <h4 class="meetups_nearby_header">More</h4>
      <div class="chevron_nearby">
        <a href="#"><i class="fa fa-chevron-down nearby"></i></a>
      </div>
    </div>
  </div>
</div>

<!-- BIO -->

  <div class="row">
    <div class="col-xs-12 tile-container">
      <div class="thumbnail">
        <h3>Bio</h3>
        <p class="bio"><%= @current_user.bio %></p>
      </div>
    </div>
  </div>

</div>
