<div class = "container">
  <%= link_to "Back to Meetups", meetups_path %>
  <h1>One Meetup:</h1>
  <p>Name: <%= @meetup.title %></p>
  <p>Description: <%= @meetup.description %></p><br>
  <p>Location: <%= link_to @venue.name %></p>
  <p>Organizer: <%= @organizer.name %></p>


  <div>
    <% @meetup.users.each_with_index do |user, index| %>
      <p><%= link_to user.name, user_path(user) %></p>
      <%= link_to "Message", "/conversations/1", class: "btn btn-success btn-xs start-conversation", "data-sid" => current_user.id, "data-rip" => user.id %>
    <% end %>
  </div>
</div>

