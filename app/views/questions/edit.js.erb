$('.content-wrapper #edit-question-form').html("<%= j (render 'edit_question_form') %>");
$('.content-wrapper #edit-question-form').slideDown(350);
$('.content-wrapper #edit-question-btn').hide();

$(document).mousedown(function (e)
{
  var container = $(".content-wrapper #edit-question-form");
    if (!container.is(e.target) // if the target of the click isn't the container...
        && container.has(e.target).length === 0) // ... nor a descendant of the container
    {
      container.hide();
    }
  });

$(".content-wrapper #submit-edit-question-btn").on('click', function() {
  $(location).attr('href', "<%= j questions_path %>");
});
